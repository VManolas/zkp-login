{
  "name": "zksync-zzlogin-dapp-sep-2025-optimized",
  "version": "2.0.0",
  "description": "Optimized zkSync Era dApp for user login using Zero-Knowledge Proofs",
  "main": "index.js",
  "scripts": {
    "build": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.ts --network zkSyncEraTestnet",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "circuit:compile": "circom circuits/login_auth.circom --r1cs --wasm --sym --c --output build/",
    "circuit:setup": "snarkjs groth16 setup build/login_auth.r1cs powersOfTau15_final.ptau build/login_auth_0000.zkey",
    "circuit:contribute": "snarkjs groth16 contribute build/login_auth_0000.zkey build/login_auth_0001.zkey --name=\"Contributor 1\" -v",
    "circuit:finalize": "snarkjs groth16 beacon build/login_auth_0001.zkey build/login_auth_final.zkey 0102030405060708090a0b0c0d0e0f101112131415161718191a1b1c1d1e1f 10 -n=\"Final Beacon\"",
    "circuit:verify": "snarkjs groth16 verify build/verification_key.json build/public.json build/proof.json",
    "circuit:export": "snarkjs zkey export solidityverifier build/login_auth_final.zkey contracts/Verifier.sol",
    "circuit:setup-full": "ts-node scripts/setup-circuit.ts",
    "circuit:generate-proof": "ts-node scripts/generate-proof.ts",
    "frontend:start": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "frontend:install": "cd frontend && npm install",
    "frontend:test": "cd frontend && npm test",
    "update-addresses": "ts-node scripts/update-frontend-addresses.ts",
    "test:integration": "ts-node scripts/test-integration.ts",
    "test:full": "npm run test && npm run frontend:test",
    "setup": "npm install && npm run frontend:install && npm run circuit:setup-full",
    "dev": "npm run frontend:start",
    "deploy:full": "npm run deploy && npm run update-addresses",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync": "^1.6.2",
    "@matterlabs/hardhat-zksync-deploy": "^1.8.0",
    "@matterlabs/hardhat-zksync-solc": "^1.5.1",
    "@matterlabs/hardhat-zksync-upgradable": "^1.10.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/chai": "^4.3.0",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^4.3.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "ethers": "^6.13.5",
    "hardhat": "^2.22.19",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "circomlib": "^2.0.5",
    "dotenv": "^16.4.7",
    "ffjavascript": "^0.2.0",
    "poseidon-hash": "^1.0.1",
    "snarkjs": "^0.7.5"
  },
  "keywords": [
    "zksync",
    "zero-knowledge",
    "zkp",
    "blockchain",
    "authentication",
    "circom",
    "snarkjs",
    "poseidon",
    "optimized"
  ],
  "author": "Optimized ZKP Team",
  "license": "MIT"
}
